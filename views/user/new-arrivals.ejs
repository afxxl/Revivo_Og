<!doctype html>
<html lang="en">
  <head>
    <title>New Arrivals | REVIVO</title>
    <link href="/css/styles.css" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Henny+Penny&family=Playfair+Display:wght@400;500;600&family=Montserrat:wght@300;400;500&display=swap" rel="stylesheet">

    <style>
      .product-card {
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        background-color: white;
      }
      .product-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1);
      }
      .section-heading {
        font-family: 'Playfair Display', serif;
        font-weight: 500;
        letter-spacing: 0.05em;
        position: relative;
        display: inline-block;
      }
      .section-heading::after {
        content: '';
        position: absolute;
        bottom: -8px;
        left: 0;
        width: 60px;
        height: 2px;
        background-color: #f8c78d;
        transition: width 0.3s ease;
      }
      .section-heading:hover::after {
        width: 100%;
      }
      .hero-heading {
        font-family: 'Henny Penny', cursive;
        font-weight: 400;
        letter-spacing: 0.05em;
        text-shadow: 1px 1px 3px rgba(0,0,0,0.2);
      }
      .hero-subheading {
        font-family: 'Montserrat', sans-serif;
        letter-spacing: 0.1em;
        font-weight: 300;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
      }
      .hero-section {
        background: linear-gradient(135deg, #2C2C2C 0%, #1a1a1a 100%);
        position: relative;
      }
      .clip-path-wave {
        clip-path: polygon(0% 0%, 4% 40%, 13% 60%, 20% 35%, 33% 60%, 44% 30%, 52% 55%, 65% 45%, 78% 65%, 85% 25%, 95% 50%, 100% 0%, 100% 100%, 0% 100%);
      }
      .font-playfair {
        font-family: 'Playfair Display', serif;
      }
      .font-montserrat {
        font-family: 'Montserrat', sans-serif;
      }
      html {
        scroll-behavior: smooth;
      }
      .new-badge {
        position: absolute;
        top: 4px;
        left: 4px;
        background-color: #2C2C2C;
        color: #f8c78d;
        font-size: 10px;
        padding: 4px 8px;
        border-radius: 12px;
        font-weight: 500;
        z-index: 10;
        font-family: 'Montserrat', sans-serif;
      }
      @media (max-width: 768px) {
        .clip-path-wave {
          height: 6px;
        }
      }
    </style>
  </head>

  <body class="bg-[#f8f7f5]">
    <%- include('../partials/user/header.ejs') %>

    <!-- New Arrivals Hero Section -->
    <section class="relative py-24 hero-section text-white overflow-hidden">
      <!-- Background layers -->
      <div class="absolute inset-0" style="background-image: url('/Images/images/OLD_PAPER_TEXTURE.jpg'); opacity: 0.2; background-size: cover;"></div>
      <div class="absolute inset-0 bg-gradient-to-r from-[#1a1a1a]/90 to-transparent"></div>
      
      <!-- Content container -->
      <div class="container mx-auto px-4 relative z-10">
        <div class="flex flex-col md:flex-row items-center justify-between">
          <!-- Text content -->
          <div class="text-left max-w-xl mb-8 md:mb-0">
            <h4 class="text-[#f8c78d] text-sm tracking-widest uppercase mb-2 hero-subheading">Fresh Finds</h4>
            <h1 class="text-5xl md:text-6xl hero-heading mb-6 leading-tight">New <span class="text-[#f8c78d]">Arrivals</span></h1>
            <p class="text-[#ffffff]/80 hero-subheading mb-8 text-lg">Discover our latest vintage treasures added in the last 30 days.</p>
            <div class="flex flex-wrap gap-4">
              <a href="#new-products" class="px-8 py-3 bg-[#f8c78d] text-[#2C2C2C] rounded-full hover:bg-[#e5b67d] transition-all font-montserrat font-medium tracking-wider">View Products</a>
              <a href="/shop" class="px-8 py-3 bg-transparent border border-white/30 text-white rounded-full hover:bg-white/10 transition-all font-montserrat font-medium tracking-wider">Shop All</a>
            </div>
          </div>
          
          <!-- Decorative elements -->
          <div class="relative hidden md:block">
            <div class="w-80 h-80 rounded-full bg-[#f8c78d]/20 backdrop-blur-sm relative overflow-hidden border border-white/10">
              <div class="absolute -right-20 -bottom-20 w-64 h-64 rounded-full bg-[#f8c78d]/30"></div>
              <div class="absolute left-10 top-10 w-16 h-16 rounded-full bg-white/20"></div>
            </div>
            <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2">
              <svg class="w-16 h-16 text-white/70" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
              </svg>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Floating design elements -->
      <div class="absolute bottom-0 left-0 w-full h-8 bg-[#f8f7f5] clip-path-wave"></div>
      <div class="absolute -bottom-6 right-12 transform rotate-45 w-24 h-24 border border-[#f8c78d]/30 rounded-md"></div>
      <div class="absolute top-12 right-12 w-8 h-8 rounded-full bg-[#f8c78d]/40"></div>
    </section>

    <!-- New Arrivals Products Section -->
    <section class="py-16 bg-[#f8f7f5]" id="new-products">
      <div class="container mx-auto px-4">
        <div class="text-center mb-12">
          <h4 class="text-[#f8c78d] text-xs tracking-widest uppercase mb-2 font-montserrat">Recently Added</h4>
          <h2 class="text-3xl section-heading text-[#2C2C2C]">New Arrivals</h2>
          <p class="text-[#2C2C2C]/70 max-w-2xl mx-auto mt-4 font-montserrat">Fresh vintage finds added to our collection in the last 30 days.</p>
        </div>

        <!-- Products grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
          <% if (products && products.length > 0) { %>
            <% products.forEach(product => { %>
              <div class="product-card group bg-white border border-[#e0dcd4]/50 p-4 hover:shadow-lg transition-all duration-300 rounded-md relative overflow-hidden">
                <!-- New badge -->
                <div class="new-badge">NEW</div>
                
                <!-- Product Image with hover effect -->
                <div class="relative aspect-[1/1] overflow-hidden mb-4 bg-white/20 group-hover:shadow-md transition-all">
                  <a href="/product/<%= product._id %>">
                    <img 
                      src="<%= product.productImage && product.productImage[0] ? product.productImage[0] : '/Images/placeholder.jpg' %>" 
                      alt="<%= product.productName %>" 
                      class="w-full h-full object-contain p-2 group-hover:scale-105 transition-transform duration-500"
                      onerror="this.src='/Images/placeholder.jpg'"
                    >
                  </a>
                  <!-- Quick view overlay -->
                  <div class="absolute inset-0 bg-[#2C2C2C]/60 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center">
                    <a href="/product/<%= product._id %>" class="px-4 py-2 bg-white text-[#2C2C2C] rounded-full text-xs font-montserrat hover:bg-[#f8c78d] transition-colors">Quick View</a>
                  </div>
                </div>
                
                <!-- Product Info -->
                <div class="px-2">
                  <!-- Category tag -->
                  <div class="mb-2">
                    <span class="text-xs text-[#2C2C2C]/60 font-montserrat"><%= product.category?.name || 'Vintage' %></span>
                  </div>
                  
                  <h3 class="text-[#333] font-medium mb-2 uppercase text-sm tracking-wider font-montserrat">
                    <a href="/product/<%= product._id %>" class="hover:text-[#f8c78d] transition-colors"><%= product.productName %></a>
                  </h3>
                  
                  <div class="flex items-center justify-between">
                    <div>
                      <p class="text-[#333] text-sm font-montserrat">$<%= product.salesPrice %> $</p>
                      <% if (product.originalPrice) { %>
                        <p class="text-[#333]/60 text-xs font-montserrat line-through">$<%= product.originalPrice %> $</p>
                      <% } %>
                    </div>
                    <button 
                      onclick="addToCart('<%= product._id %>')"
                      class="w-10 h-10 flex items-center justify-center bg-[#2C2C2C] text-white rounded-full hover:bg-[#f8c78d] hover:text-[#2C2C2C] transition-colors transform hover:scale-110"
                      title="Add to cart"
                    >
                      <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
                      </svg>
                    </button>
                  </div>
                </div>
              </div>
            <% }); %>
          <% } else { %>
            <!-- Empty State -->
            <div class="col-span-full text-center py-12">
              <div class="max-w-md mx-auto">
                <svg class="w-16 h-16 mx-auto text-[#2C2C2C]/30 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
                </svg>
                <h3 class="text-xl font-medium text-[#2C2C2C] mb-2 section-heading">No New Arrivals</h3>
                <p class="text-[#2C2C2C]/70 mb-6 font-montserrat">Check back soon for our latest vintage finds!</p>
                <a href="/shop" class="inline-block px-6 py-3 bg-[#2C2C2C] text-white rounded-md hover:bg-[#1a1a1a] transition-colors font-montserrat">
                  Browse All Products
                </a>
              </div>
            </div>
          <% } %>
        </div>

        <!-- Pagination -->
        <% if (totalPages > 1) { %>
        <div class="mt-16 flex justify-center">
          <div class="inline-flex rounded-md shadow-sm">
            <% if (hasPreviousPage) { %>
              <a href="/new-arrivals?page=<%= previousPage %>" 
                 class="px-4 py-2 text-sm font-montserrat border border-[#e0dcd4] rounded-l-md hover:bg-[#f8c78d]/10 text-[#2C2C2C]">
                Previous
              </a>
            <% } else { %>
              <span class="px-4 py-2 text-sm font-montserrat border border-[#e0dcd4] rounded-l-md text-[#2C2C2C]/50 cursor-not-allowed">
                Previous
              </span>
            <% } %>

            <% for (let i = 1; i <= totalPages; i++) { %>
              <% if (i === currentPage) { %>
                <span class="px-4 py-2 text-sm font-montserrat border-t border-b border-[#e0dcd4] bg-[#2C2C2C] text-white">
                  <%= i %>
                </span>
              <% } else { %>
                <a href="/new-arrivals?page=<%= i %>" 
                   class="px-4 py-2 text-sm font-montserrat border-t border-b border-[#e0dcd4] hover:bg-[#f8c78d]/10 text-[#2C2C2C]">
                  <%= i %>
                </a>
              <% } %>
            <% } %>

            <% if (hasNextPage) { %>
              <a href="/new-arrivals?page=<%= nextPage %>" 
                 class="px-4 py-2 text-sm font-montserrat border border-[#e0dcd4] rounded-r-md hover:bg-[#f8c78d]/10 text-[#2C2C2C]">
                Next
              </a>
            <% } else { %>
              <span class="px-4 py-2 text-sm font-montserrat border border-[#e0dcd4] rounded-r-md text-[#2C2C2C]/50 cursor-not-allowed">
                Next
              </span>
            <% } %>
          </div>
        </div>
        <% } %>
      </div>
    </section>

    <%- include('../partials/user/footer.ejs') %>

    <script>
      // Enhanced toast notification
      function showToast(message, type = 'success') {
        const toast = document.createElement('div');
        toast.className = `fixed bottom-4 right-4 ${type === 'success' ? 'bg-[#2C2C2C]' : 'bg-red-500'} text-white px-6 py-3 rounded-lg shadow-xl transform translate-y-0 opacity-100 transition-all duration-300 z-50 flex items-center`;
        
        const icon = document.createElement('span');
        icon.className = 'mr-2';
        icon.innerHTML = type === 'success' 
          ? '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>'
          : '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>';
        
        const text = document.createElement('span');
        text.textContent = message;
        text.className = 'font-montserrat';
        
        toast.appendChild(icon);
        toast.appendChild(text);
        document.body.appendChild(toast);

        setTimeout(() => {
          toast.classList.add('translate-y-full', 'opacity-0');
          setTimeout(() => toast.remove(), 300);
        }, 3000);
      }
      
      // Enhanced addToCart function
      async function addToCart(productId) {
        try {
          const response = await fetch('/add-to-cart', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({ productId }),
          });

          const data = await response.json();

          if (data.success) {
            showToast('Added to cart successfully!', 'success');
          } else {
            throw new Error(data.message || 'Failed to add to cart');
          }
        } catch (error) {
          console.error('Error adding to cart:', error);
          showToast(error.message || 'Failed to add to cart', 'error');
        }
      }
    </script>
  </body>
</html>
