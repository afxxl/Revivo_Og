    <style>
      .paper-bg {
        background-image: url('/Images/images/OLD_PAPER_TEXTURE.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        min-height: 100vh;
        position: relative;
      }
      .paper-bg::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(255, 255, 255, 0.1);
        pointer-events: none;
      }
      .model-container {
        position: relative;
        height: calc(100vh - 50px);
        width: 100%;
        overflow: visible;
        margin-top: -80px;
      }
      .model-group {
        position: absolute;
        right: 0;
        bottom: -5%;
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: flex-end;
        align-items: flex-end;
      }
      .model-wrapper {
        position: relative;
        height: 100%;
        display: flex;
        align-items: flex-end;
        margin-right: 5%;
        transform: translateY(-5%);
      }
      .model {
        opacity: 0;
        transform: translateY(20px);
        animation: fadeInUp 1s ease forwards;
        max-height: 85vh;
        object-fit: contain;
        filter: contrast(1.1) saturate(1.1);
      }
      .model-1 {
        height: 60%;
        margin-right: -8%;
        animation-delay: 0.3s;
      }
      .model-2 {
        height: 70%;
        margin-right: -10%;
        animation-delay: 0.6s;
      }
      .model-3 {
        height: 80%;
        animation-delay: 0.9s;
      }
      @keyframes fadeInUp {
        from {
          opacity: 0;
          transform: translateY(30px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
      .content-wrapper {
        max-width: 600px;
        margin-left: 10%;
        opacity: 0;
        animation: fadeIn 1s ease forwards 0.5s;
        margin-bottom: 2rem;
      }
      @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
      }
      .main-heading {
        font-family: 'Playfair Display', serif;
        font-size: 4.5rem;
        letter-spacing: 0.1em;
        color: #2C2C2C;
        font-weight: 500;
        line-height: 1;
        margin-bottom: 1.5rem;
        position: relative;
      }
      .main-heading::after {
        content: '';
        position: absolute;
        bottom: -10px;
        left: 0;
        width: 60px;
        height: 3px;
        background-color: #2C2C2C;
      }
      .tagline {
        font-family: 'Montserrat', sans-serif;
        color: rgba(44, 44, 44, 0.85);
        font-size: 1rem;
        letter-spacing: 2.5px;
        line-height: 1.8;
        font-weight: 300;
        text-transform: uppercase;
        margin-bottom: 2.5rem;
      }
      .welcome-text {
        font-family: 'Montserrat', sans-serif;
        letter-spacing: 2px;
        line-height: 1.6;
      }
      .shop-button {
        font-family: 'Montserrat', sans-serif;
        background-color: #2C2C2C;
        transition: all 0.4s ease;
        letter-spacing: 3px;
        text-transform: uppercase;
        font-size: 0.9rem;
        padding: 1.2rem 3rem;
        position: relative;
        overflow: hidden;
        z-index: 1;
      }
      .shop-button::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: #4A4A4A;
        transition: all 0.4s ease;
        z-index: -1;
      }
      .shop-button:hover::before {
        left: 0;
      }
      .shop-button:hover {
        transform: translateY(-2px);
      }
      .vintage-accent {
        position: absolute;
        top: 2rem;
        left: 50%;
        transform: translateX(-50%);
        font-family: 'Playfair Display', serif;
        font-style: italic;
        color: rgba(44, 44, 44, 0.4);
        font-size: 1.2rem;
        letter-spacing: 2px;
      }
      .decorative-circle {
        position: absolute;
        width: 300px;
        height: 300px;
        border: 1px solid rgba(44, 44, 44, 0.1);
        border-radius: 50%;
        right: 10%;
        top: 20%;
        z-index: 0;
      }
      .decorative-circle::before {
        content: '';
        position: absolute;
        width: 200px;
        height: 200px;
        border: 1px solid rgba(44, 44, 44, 0.1);
        border-radius: 50%;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
      }
      .vintage-text {
        position: absolute;
        font-family: 'Playfair Display', serif;
        font-style: italic;
        color: rgba(44, 44, 44, 0.15);
        font-size: 8rem;
        right: -2rem;
        bottom: 5rem;
        transform: rotate(-90deg);
        z-index: 0;
      }
      .year-label {
        position: absolute;
        right: 3rem;
        top: 5rem;
        transform: rotate(90deg);
        font-family: 'Montserrat', sans-serif;
        font-size: 0.9rem;
        letter-spacing: 5px;
        color: rgba(44, 44, 44, 0.6);
      }
      .dot-pattern {
        position: absolute;
        width: 150px;
        height: 150px;
        background-image: radial-gradient(circle, #2C2C2C 1px, transparent 1px);
        background-size: 15px 15px;
        opacity: 0.1;
        top: 15%;
        right: 15%;
        z-index: 0;
      }
      .features-list {
        margin-top: 4rem;
        display: flex;
        gap: 2.5rem;
        opacity: 0;
        animation: fadeIn 1s ease forwards 1s;
      }
      .feature-item {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-family: 'Montserrat', sans-serif;
        color: rgba(44, 44, 44, 0.75);
        font-size: 0.85rem;
        letter-spacing: 1px;
      }
      .feature-item svg {
        width: 18px;
        height: 18px;
        stroke: #2C2C2C;
        opacity: 0.6;
      }
      .section-heading {
        font-family: 'Playfair Display', serif;
        font-weight: 500;
        letter-spacing: 0.05em;
        position: relative;
        display: inline-block;
      }
      .section-heading::after {
        content: '';
        position: absolute;
        bottom: -8px;
        left: 0;
        width: 60px;
        height: 2px;
        background-color: #f8c78d;
        transition: width 0.3s ease;
      }
      .section-heading:hover::after {
        width: 100%;
      }
      .hero-heading {
        font-family: 'Henny Penny', cursive;
        font-weight: 400;
        letter-spacing: 0.05em;
        text-shadow: 1px 1px 3px rgba(0,0,0,0.2);
      }
      .hero-subheading {
        font-family: 'Montserrat', sans-serif;
        letter-spacing: 0.1em;
        font-weight: 300;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
      }
      .clip-path-wave {
        clip-path: polygon(0% 0%, 4% 40%, 13% 60%, 20% 35%, 33% 60%, 44% 30%, 52% 55%, 65% 45%, 78% 65%, 85% 25%, 95% 50%, 100% 0%, 100% 100%, 0% 100%);
      }
      .font-playfair {
        font-family: 'Playfair Display', serif;
      }
      .font-montserrat {
        font-family: 'Montserrat', sans-serif;
      }
      .font-henny {
        font-family: 'Henny Penny', cursive;
      }
      html {
        scroll-behavior: smooth;
      }
      .product-card {
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        background-color: white;
      }
      .product-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1);
      }
      @media (max-width: 768px) {
        .clip-path-wave {
          height: 6px;
        }
        .main-heading {
          font-size: 3rem;
        }
        .model-1 {
          height: 50%;
        }
        .model-2 {
          height: 60%;
        }
        .model-3 {
          height: 70%;
        }
      }
    </style>
  </head>

